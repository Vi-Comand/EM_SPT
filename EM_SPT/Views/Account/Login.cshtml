@model EM_SPT.Models.LoginModel

@{
    ViewData["Title"] = "Войти";
}
<body class="gradient">
    <main class="page hire-me-page">
        <section class="portfolio-block hire-me">
            <div class="container">
                <br />

                <form asp-action="Login" asp-controller="Account" asp-anti-forgery="true" class="text-center" style="width: 397px; margin-left: auto; margin-right: auto;" method="post">


                    <div class="validation center" asp-validation-summary="ModelOnly" />
                    <div class="form-row shadow p-3 mb-5 bg-white rounded">
                        <div class="alert col-md-12">
                            <label asp-for="Login">Введите логин <b style="color:transparent">__</b> </label>
                            <input class="btn btn-outline-success" type="text" asp-for="Login" />
                            <span asp-validation-for="Login" />
                        </div>
                        <div class="alert col-md-12">
                            <label asp-for="Password">Введите пароль</label>
                            <input class="btn btn-outline-success" asp-for="Password" />
                            <span asp-validation-for="Password" />
                        </div>
                        <div class="col-md-12">
                            <input type="submit" value="Войти" class="btn btn-outline-success" />
                        </div>
                    </div>


