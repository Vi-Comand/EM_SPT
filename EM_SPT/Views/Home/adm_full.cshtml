@using System.Linq
@model EM_SPT.Models.oo
@{
    ViewData["Title"] = "Администратор";
}
<!DOCTYPE html>


<html>
<head>

    <meta name="viewport" content="width=device-width" />
    <noscript><meta http-equiv="refresh" content="0; URL=/badbrowser.html"></noscript>
    <title>Администратор</title>
</head>
<body class="gradient">

    <ul class="nav nav-tabs">
        <li>
            <a href="#klass" style="float: left;" class="nav-link active" data-toggle="tab">Управление МО</a>
        </li>
        <li>
            <a href="#otch" style="float: left;" class="nav-link" data-toggle="tab">Формирование отчетов</a>
        </li>

    </ul>
    <div class="tab-content">
        <div class="tab-pane active " id="klass">
            <form>
                <div class="form-row shadow p-3 mb-5 bg-white rounded">

                    <div class="alert alert-success col-md-12" role="alert">Список МО</div>
                    <p>Скачайте файл шаблон для заполнения, заполните все поля и загрузите, чтобы сформировать логины и пароли для всех МО <a href="~/file/Formir_MO.xlsx">Шаблон для заполнения</a></p>
                    <div class="input-group">
                        <div class="custom-file">
                            <input type="file" class="custom-file-input" id="inputGroupFile04" aria-describedby="inputGroupFileAddon04" lang="ru">
                            <label class="custom-file-label" for="inputGroupFile04">Выберите файл</label>
                        </div>
                        <div class="input-group-append">
                            <button class="btn btn-outline-success" type="button" id="inputGroupFileAddon04">Загрузить</button>
                        </div>
                    </div>
                    <button class="btn btn-outline-success " data-toggle="modal" data-target="#addklass" form="0">Сформировать МО</button>

                </div>
            </form>
        </div>
        <div class="tab-pane fade " id="otch">
            <div class="form-row shadow p-3 mb-5 bg-white rounded">
                <div class="form-group col-md-12">
                    <div class="form-group col-md-4">
                        <select id="inputState" class="form-control" required>
                            <option value="" selected>Выберите код класса</option>
                            <option value="1">1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                            <option value="4">4</option>
                            <option value="5">5</option>
                            <option value="6">6</option>
                            <option value="7">7</option>
                            <option value="8">8</option>
                            <option value="9">9</option>
                            <option value="10">10</option>
                            <option value="11">11</option>
                            <option value="12">12</option>
                            <option value="1 курс">1 курс</option>
                            <option value="2 курс">2 курс</option>
                            <option value="3 курс">3 курс</option>
                            <option value="4 курс">4 курс</option>
                            <option value="5 курс">5 курс</option>
                        </select>
                    </div>
                    <button class="btn btn-outline-success form-group col-md-4">Загрузить отчет по классу</button>
                </div>
                <div class="form-group col-md-12">
                    <button class="btn btn-outline-success form-group col-md-4">Загрузить отчет по школе</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal addklass -->
    <div class="modal fade bs-example-modal-lg" id="addklass" tabindex="1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="myModalLabel">Добавить класс</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                </div>
                <form method="post" enctype="multipart/form-data">
                    <div class="modal-body">
                        <input type="hidden" asp-for="id" />
                        <table>
                            <tr>
                                <td>Количество учеников</td>
                                <td>
                                    <input type="text" value="" asp-for="id" />
                                </td>
                            </tr>
                        </table>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Закрыть</button>
                        <button type="submit" class="" asp-controller="Lk" asp-action="Add_klass">Добавить класс</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>