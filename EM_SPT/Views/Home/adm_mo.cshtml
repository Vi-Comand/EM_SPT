@using System.Linq
@model EM_SPT.Models.oo
@{
    ViewData["Title"] = "Администратор МО";
}
<!DOCTYPE html>


<html>
<head>

    <meta name="viewport" content="width=device-width" />
    <noscript><meta http-equiv="refresh" content="0; URL=/badbrowser.html"></noscript>
    <title>Администратор МО</title>
</head>
<body class="gradient">

    <ul class="nav nav-tabs">
        <li>
            <a href="#klass" style="float: left;" class="nav-link active" data-toggle="tab">Управление ОО</a>
        </li>
        <li>
            <a href="#otch" style="float: left;" class="nav-link" data-toggle="tab">Формирование отчетов</a>
        </li>

    </ul>
    <div class="tab-content">
        <div class="tab-pane active " id="klass">
            <form>
                <div class="form-row shadow p-3 mb-5 bg-white rounded">

                    <div class="alert alert-success col-md-12" role="alert">Список ОО</div>


                    <button class="btn btn-outline-success " data-toggle="modal" data-target="#addoo" form="0">Добавить ОО</button>

                </div>
            </form>
        </div>
        <div class="tab-pane fade " id="otch">
            <div class="form-row shadow p-3 mb-5 bg-white rounded">
                <div class="form-group col-md-12">
                    <div class="form-group col-md-4">
                        <select id="inputState" class="form-control" required>
                            <option value="" selected>Выберите код OO</option>

                        </select>
                    </div>
                    <button class="btn btn-outline-success form-group col-md-4">Загрузить отчет по ОО</button>
                </div>
                <div class="form-group col-md-12">
                    <button class="btn btn-outline-success form-group col-md-4">Загрузить отчет по МО</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal addoo -->
    <div class="modal fade bs-example-modal-lg" id="addklass" tabindex="1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="myModalLabel">Добавить ОО</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                </div>
                <form method="post" enctype="multipart/form-data">
                    <div class="modal-body">
                        <input type="hidden" asp-for="id" />
                        <table>
                            <tr>
                                <td>Количество классов</td>
                                <td>
                                    <input type="text" value="" asp-for="id" />
                                </td>
                            </tr>
                        </table>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Закрыть</button>
                        <button type="submit" class="" asp-controller="Lk" asp-action="Add_klass">Добавить ОО</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>