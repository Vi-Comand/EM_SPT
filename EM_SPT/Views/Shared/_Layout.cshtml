<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />

    </environment>
    @*  <environment exclude="Development">
            <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css"
                  asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
                  asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
            <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
        </environment>*@
</head>
<body>
    <nav class="navbar navbar-dark navbar-expand-lg gradient-nav">
        <div class="container">

            <button class="navbar-toggler" data-toggle="collapse" data-target="#navbarNav"><span class="sr-only sr-only-focusable"><img class="rounded-circle" src="~/assets/img/logo.png" width="60"></span><span class="navbar-toggler-icon"></span></button>

            <div class="collapse navbar-collapse text-left " id="navbarNav">

                <form method="post" class="navbar" style="margin:initial; display:contents">
                    <button type="submit" class="btn btn-outline-success" style="margin:5px;" asp-controller="Home" asp-action="Index">Главная</button>
                    <br />
                    <button type="submit" class="btn btn-outline-success" style="margin:5px;" asp-controller="Home" asp-action="Anketa_a">Анкетирование</button>
                    <br />
                    <button type="submit" class="btn btn-outline-success" style="margin:5px;" asp-controller="Home" asp-action="Info">Информация</button>
                    <br />
                    @if (User.Identity.IsAuthenticated == false)
                    {
                        <button type="submit" class="btn btn-outline-info" style="margin-left:auto;" asp-controller="Account" asp-action="login">Войти</button>
                        <br />
                    }
                    else
                    {
                        <button type="submit" class="btn btn-outline-info" style="margin-left:auto; " asp-controller="Account" asp-action="Logout"> Выйти</button>
                    }
                </form>
            </div>

        </div>
    </nav>



    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2019 - ВиКоманда</p>
        </footer>
    </div>

    <environment include="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>

    </environment>
